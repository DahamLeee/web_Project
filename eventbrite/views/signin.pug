extends layout

block top-nav
  .header.clearfix
    nav.navbar.navbar-expand-md.navbar-light
      .nav-header
        a#navbar-brand.navbar-brand(href='#') Eventbrite
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

block hero-unit
  
block content
  .container
    .row
      img.logo.justify-content-center(src="favicon.ico", alt="alt")
      .signin-title Let's get started
      .signin-text Enter your email to sign up or log in.
    form.form-signin(action='/signin', method='POST')
      h3.form-signin-heading Signin
      label.sr-only(for='email') Email address
      input(
        type='email', id='email', name='email', class='form-control',
        placeholder='Email address', required, autofocus
      )
      label.sr-only(for='password') Password
      input(
        type='password', id='password', name='password', class='form-control',
        placeholder='Passowrd', required, autofocus
      )
      .checkbox
        label
          input(type="checkbox", value="remember-me")
          |
          | Remember me
      button.btn.btn-primary.btn-lock(type='submit') Signin
      a.btn.btn-dark.btn-block(href='/auth/facebook')
        i.fa.fa-facebook.fa-lg Signin with Facebook
        
      div.sub
        a(href='/users/new') Signup
        |
        | /
        |
        a(href='/reset-password') Reset Password
block footer
