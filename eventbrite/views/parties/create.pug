block content
  .container
    form.form-create(action="/parties", method="POST", id="create")
      .event_details_wrapper
        h2.main-title 1. Event Details
        .form-group
          label(for="title") EVENT TITLE
          input.form-control(type="text", name="title", placeholder="Give it a short distinct name", value=party.title)
        .form-group
          label(for="location") LOCATION
          input.form-control(type="text", name="location", placeholder="Search for a venue or address.", value=party.location)
        .form-group
          label(for="description") EVENT DESCRIPTION
          textarea.form-control(name="description", rows="5")= party.description
        .form-group
          label(for="organizerName") ORGANIZER NAME
          input.form-control(type="text", name="organizerName", placeholder="Who's organizing this event?", value=party.organizerName)
        .form-group
          label(for="organizerDescription") ORGANIZER DESCRIPTION
          textarea.form-control(name="organizerDescription", rows="3")= party.organizerDescription
        
