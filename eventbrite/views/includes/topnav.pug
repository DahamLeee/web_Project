.header.clearfix
  nav.navbar.navbar-expand-md.navbar-light.bg-light
    .nav-header
      a.navbar-brand(href='/') Eventbrite
    button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
      span.navbar-toggler-icon
        
    #navbarNav.collapse.navbar-collapse.justify-content-end
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/parties') BROWSE EVENTS
        li.nav-item.dropdown
          a#organize.nav-link.dropdown-toggle(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") ORGANIZE
          .dropdown-menu(aria-labelledby='learn')
            a.dropdown-item(href='#') Overview
            a.dropdown-item(href='#') Pricing
            a.dropdown-item(href='#') Blog
            a.dropdown-item(href='#') Resources
        li.nav-item.dropdown
          a#help.nav-link.dropdown-toggle(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") HELP
          .dropdown-menu(aria-labelledby='help')
            a.dropdown-item(href='#') Where are my tickets?
            a.dropdown-item(href='#') How to contact the event organizer
            a.dropdown-item(href='#') Help Center
        if (!currentUser)
          li.nav-item
            a.nav-link(href='/signin') SIGN IN
        else
          li.nav-item.dropdown
            a#profile.nav-link.dropdown-toggle(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") My Profile
            .dropdown-menu(aria-labelledby='profile')
              if (currentUser.id == "5a23949258094b2b1cc998ca")
                a.dropdown-item(href='/users') Users
              a.dropdown-item(href=`/users/${currentUser.id}`) Account Settings
              a.dropdown-item(href='/signout') Signout
        li.nav-item
          a#createEvent.nav-link(href='/parties/create') CREATE EVENT
